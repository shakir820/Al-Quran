    <Grid Margin="0,20,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Juz List"
                   FontSize="20"
                   Foreground="#09A82E"
                   FontWeight="SemiBold"
                   Margin="20,0,0,0" />

        <ListView Grid.Row="1"
                  Name="SuraListView"
                  ItemsSource="{x:Bind QuranFunctionality.JuzCollection, Mode=OneWay}"
                  Margin="0,20,0,0">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Juz_vm">
                    <Grid CornerRadius="5"
                          Padding="10,5,10,5"
                          Background="#F6F6F6">
                       
                        <TextBlock Text="{x:Bind EnglishTitle, Mode=OneWay}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#09A82E"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left" />
                        
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
