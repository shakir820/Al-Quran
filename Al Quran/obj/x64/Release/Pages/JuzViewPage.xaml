<Page x:ConnectionId='1'
    x:Class="Al_Quran.Pages.JuzViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Al_Quran.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:models="using:Al_Quran.Models"
      mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="20,30,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock x:ConnectionId='17'                                              
                       Grid.Column="0"
                       FontWeight="SemiBold"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Foreground="DimGray"
                       HorizontalAlignment="Left" />
            <TextBlock Text="بِسْمِ ٱللّٰهِ الرَّحْمٰنِ الرَّحِيْمِ"
                       FontWeight="SemiBold"
                       FontSize="20"
                       Foreground="DimGray"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            <!--<TextBlock Text="{x:Bind Surah.Name, Mode=OneWay}"
                       Grid.Column="2"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="DimGray"
                       HorizontalAlignment="Right" />-->
        </Grid>

        <ListView x:ConnectionId='2'                                              
                  Grid.Row="1"
                  Margin="0,20,0,0"
                  Name="AyahListView">
            <ListView.ItemTemplate>
                <DataTemplate                            >
                    <Grid x:ConnectionId='8' CornerRadius="5"
                          Padding="10"
                          Margin="0"
                          Background="#F6F6F6">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                       
                        <TextBlock x:ConnectionId='9' FontWeight="SemiBold"
                                   Foreground="#148C5A"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                                                    
                                   LineHeight="35"
                                   LineStackingStrategy="BlockLineHeight" />

                        <TextBlock x:ConnectionId='10' FontWeight="Normal"
                                   Foreground="DimGray"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Grid.Row="1"
                                   FontSize="13"
                                                                                />

                        <Grid Grid.Row="2"
                              Background="Transparent"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid CornerRadius="10"
                                  Background="DarkGray"
                                  Padding="10,2,10,2"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Name="AyahNumberGrid">
                                <TextBlock x:ConnectionId='16'                                    
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                               
                            </Grid>
                            <Grid CornerRadius="10"
                                  Grid.Column="1"
                                  Background="DarkGray"
                                  Padding="10,2,10,2"
                                  Margin="20,0,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock x:ConnectionId='14'                                               
                                           Foreground="White"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="("
                                           Margin="2,0,0,0"
                                           VerticalAlignment="Center"
                                           Grid.Column="1"
                                           Foreground="White" />
                                <TextBlock x:ConnectionId='15'                                           
                                           Margin="0,0,0,0"
                                           VerticalAlignment="Center"
                                           Grid.Column="2"
                                           Foreground="White" />
                                <TextBlock Text=")"
                                           Margin="0,0,0,0"
                                           VerticalAlignment="Center"
                                           Grid.Column="3"
                                           Foreground="White" />
                            </Grid>
                            <Grid CornerRadius="10"
                                  Grid.Column="2"
                                  Background="DarkGray"
                                  Padding="10,2,10,2"
                                  Margin="20,0,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                               
                                <TextBlock Text="("
                                           Margin="0,0,0,0"
                                           VerticalAlignment="Center"
                                           Grid.Column="0"
                                           Foreground="White" />
                                <TextBlock x:ConnectionId='12'                                           
                                           Margin="0,0,0,0"
                                           VerticalAlignment="Center"
                                           Grid.Column="1"
                                           Foreground="White" />
                                <TextBlock Text=")"
                                           Margin="0,0,2,0"
                                           VerticalAlignment="Center"
                                           Grid.Column="2"
                                           Foreground="White" />
                                <TextBlock x:ConnectionId='13'                                        
                                           Foreground="White"
                                           Grid.Column="3"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </Grid>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <Grid x:ConnectionId='3' Name="NoInternetGrid"
              Grid.Row="1"
              Visibility="Collapsed"
              VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <FontIcon FontFamily="Segoe MDL2 Assets"
                      Glyph="&#xEC27;"
                      Foreground="Gray"
                      FontSize="60" />
            <TextBlock Text="No Internet"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="1"
                       Margin="0,20,0,0"
                       FontSize="16" />
            <Button x:ConnectionId='6' x:Name="TryAgianBtn"
                                             
                    Content="Try Again"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    Grid.Row="2"
                    Margin="0,20,0,0"
                    Width="150" />
        </Grid>
        <Grid x:ConnectionId='4' Name="LoadingGrid"
              VerticalAlignment="Center"
              Grid.Row="1"
              Visibility="Collapsed">
            <ProgressBar x:ConnectionId='5'  Width="200"
                          x:Name="LoadingProgressBar"
                          Foreground="#09A82E"
                          IsIndeterminate="True"
                          ShowPaused="False"
                          ShowError="False" />
        </Grid>
    </Grid>
</Page>

